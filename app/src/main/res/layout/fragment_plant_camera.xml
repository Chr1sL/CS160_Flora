<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlantCameraFragment">

    <TextView
        android:id="@+id/takePictureTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Take a Picture"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/cameraImage"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/camera_pic"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/takePictureTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_press_camera"
        app:layout_constraintTop_toBottomOf="@id/cameraImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>